{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "myblocks/customhero",
	"version": "0.1.0",
	"title": "Custom Hero",
	"category": "widgets",
	"icon": "smiley",
	"description": "Example block scaffolded with Create Block tool.",
	"example": {},
	"supports": {
		"html": false
	},
	"attributes": {
		"autoplay": {
			"type": "boolean",
			"default": true
		},
		"slides": {
			"type": "array",
			"default": [
				{ "title": "", "subtitle": "", "backgroundImage": "" }
			]
		},
		"icons": {
			"type": "array",
			"default": [
				{ "icon": "", "title": "Icona 1", "url": "" },
				{ "icon": "", "title": "Icona 2", "url": "" },
				{ "icon": "", "title": "Icona 3", "url": "" }
			]
		}
	},
	"textdomain": "customhero",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"render": "file:./render.php",
	"viewScript": "file:./view.js"
}
